# Environment Configuration Template
# Copy this file to .env and fill in the actual values

# ============================================================
# DigiLocker OAuth Configuration
# ============================================================
# Register for credentials at: https://staging.digitallocker.gov.in/
# Production: https://www.digitallocker.gov.in/

DIGILOCKER_CLIENT_ID=your_digilocker_client_id_here
DIGILOCKER_CLIENT_SECRET=your_digilocker_client_secret_here
DIGILOCKER_REDIRECT_URI=http://localhost:5000/api/auth/digilocker/callback

# ============================================================
# Database Configuration
# ============================================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database

DATABASE_URL=postgresql://postgres:password@localhost:5432/tnea

# ============================================================
# Session Configuration
# ============================================================
# Generate with: openssl rand -base64 32

SESSION_SECRET=your-secure-session-secret-here

# ============================================================
# Token Encryption
# ============================================================
# Generate 32-byte hex key for AES-256-GCM encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

TOKEN_ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here

# ============================================================
# Application Environment
# ============================================================

NODE_ENV=development
# Options: development, staging, production

PORT=5000

# ============================================================
# HTTPS & Security Configuration
# ============================================================

HTTPS_ONLY=false
# Set to true in production

HSTS_MAX_AGE=31536000
# HTTP Strict Transport Security max age (in seconds)

# ============================================================
# OpenAI Configuration (Optional - for Chatbot)
# ============================================================

OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================================
# Chatbot Service Configuration
# ============================================================

CHATBOT_SERVICE_URL=http://127.0.0.1:8000/chat
# URL of the Python chatbot microservice

# ============================================================
# Email Configuration (Optional - for Notifications)
# ============================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# ============================================================
# Admin Configuration
# ============================================================

ADMIN_EMAIL=admin@tnea-insight.gov.in
ADMIN_PHONE=+91-9876543210

# ============================================================
# Logging & Monitoring
# ============================================================

LOG_LEVEL=info
# Options: debug, info, warn, error

SENTRY_DSN=
# Optional: Sentry error tracking DSN

# ============================================================
# Rate Limiting Configuration
# ============================================================

AUTH_RATE_LIMIT=5
# Max authentication attempts per 15 minutes

API_RATE_LIMIT=100
# Max API requests per minute

CERT_RETRIEVAL_RATE_LIMIT=10
# Max certificate retrievals per hour

# ============================================================
# Feature Flags
# ============================================================

ENABLE_2FA=false
# Enable Two-Factor Authentication for admins

ENABLE_WEBSOCKET=false
# Enable real-time WebSocket updates

ENABLE_AI_DETECTION=false
# Enable AI-based anomaly detection

# ============================================================
# Certificate Configuration
# ============================================================

REQUIRED_CERTIFICATES=10th_marksheet,12th_marksheet,community_certificate,nativity_certificate
# Comma-separated list of required document types

CERTIFICATE_EXPIRY_DAYS=365
# Days before certificate is marked as expired

# ============================================================
# Eligibility Rules
# ============================================================

DEFAULT_CUTOFF_GENERAL=180
DEFAULT_CUTOFF_OBC=170
DEFAULT_CUTOFF_SC=160
DEFAULT_CUTOFF_ST=160

MAX_HOUSEHOLD_INCOME=800000
# Maximum household income for general students (in INR)

# ============================================================
# Development Tools
# ============================================================

DEBUG=true
# Enable detailed logging

MOCK_DIGILOCKER=false
# Use mock DigiLocker responses for testing
